/**
 * Implements hook_views_data().
 */
function autoshortqr_views_data() {
  $data = [];
  $definition = [
    'autoshortqr' => [
      'title' => t('Qr code'),
      'help' => t('Qr code to the entity.'),
      'field' => [
        'id' => 'autoshortqr',
      ],
    ],
    'autoshortqr_short_link' => [
      'title' => t('Short link'),
      'help' => t('Short link to the entity.'),
      'field' => [
        'id' => 'autoshortqr_short_link',
      ],
    ],
  ];
  $entityTypes = ['node', 'user', 'term', 'redirect'];
  foreach ($entityTypes as $typeId) {
    $type = \Drupal::entityTypeManager()->getDefinition($typeId, FALSE);
    if (!empty($type)) {
      if (!empty($type->getDataTable())) {
        $data[$type->getDataTable()] = $definition;
      } else {
        $data[$type->getBaseTable()] = $definition;
      }
    }
  }
  return $data;
}

/**
 * Implements hook_token_info().
 */
function autoshortqr_token_info() {
  $autocodeTokens = [
    'iqac_short_link' =>
    [
      'name' => t('Autocode Short url'),
      'description' => t('Short url of the entity.'),
    ],
    'iqac_qr_link' =>
    [
      'name' => t('Autocode QR code url'),
      'description' => t('QR code url of the entity.'),
    ],
    'iqac_qr_download_link' =>
    [
      'name' => t('Autocode QR code download url'),
      'description' => t('QR code download url of the entity.'),
    ],
  ];
  $info = [
    'tokens' =>
    [
      'node' => $autocodeTokens,
      'term' => $autocodeTokens,
      'user' => $autocodeTokens,
    ],
  ];

  $type = \Drupal::entityTypeManager()->getDefinition('redirect', FALSE);
  if (!empty($type)) {
    $info['tokens']['redirect'] = $autocodeTokens;
  }

  return $info;
}

/**
 * Implements hook_tokens().
 */
function autoshortqr_tokens($type, $tokens, array $data, array $options, BubbleableMetadata $bubbleable_metadata) {
  $keys = array_intersect(
    ['iqac_short_link', 'iqac_qr_link', 'iqac_qr_download_link'],
    array_keys($tokens)
  );
  if (empty($keys)) {
    return;
  }
  $replacements = [];
  $entity = NULL;
  $entityType = NULL;
  $prefix = '';
  switch ($type) {
    case 'node':
      if (!empty($data[$type])) {
        $entity = $data[$type];
        $entity = \Drupal::entityTypeManager()->getStorage($type)->loadUnchanged($entity->id());
        $entityType = $entity->type->entity;
        $prefix = 'tc';
      }
      break;

    case 'term':
      if (!empty($data[$type])) {
        $entity = $data[$type];
        $entity = \Drupal::entityTypeManager()->getStorage($type)->loadUnchanged($entity->id());
        $entityType = Vocabulary::load($entity->bundle());
        $prefix = 'tc';
      }
      break;

    case 'user':
      if (!empty($data[$type])) {
        $entity = $data[$type];
        $entity = \Drupal::entityTypeManager()->getStorage($type)->loadUnchanged($entity->id());
        $entityType = new UserThirdpartyWrapper();
        $prefix = 'uc';
      }
      break;

    case 'redirect':
      if (!empty($data[$type])) {
        $entity = $data[$type];
        $entity = \Drupal::entityTypeManager()->getStorage($type)->loadUnchanged($entity->id());
        $entityType = new RedirectThirdpartyWrapper();
        $prefix = 'rc';
      }
      break;
  }
  if (!empty($entity) && !empty($entityType)) {
    foreach ($tokens as $name => $original) {
      // Find the desired token by name.
      switch ($name) {
        case 'iqac_short_link':
          if ($entityType->getThirdpartySetting('autoshortqr', 'short_enable', FALSE)) {
            $replacements[$original] = $entity->autoshortqr_short_link->uri;
          }
          break;

        case 'iqac_qr_link':
          if ($entityType->getThirdpartySetting('autoshortqr', 'qr_enable', FALSE)) {
            $replacements[$original] = $entity->autoshortqr->uri;
          }
          break;

        case 'iqac_qr_download_link':
          if ($entityType->getThirdpartySetting('autoshortqr', 'qr_enable', FALSE)) {
            $host = $entityType->getThirdPartySetting('autoshortqr', 'qr_base_domain', \Drupal::request()->getSchemeAndHttpHost());
            $url = $host . '/autoshortqr/' . $prefix . '/' . base_convert($entity->id(), 10, 36);
            $replacements[$original] = $url;
          }
          break;
      }
    }
  }

  // Return the replacements.
  return $replacements;
}

/**
 * Helper function to build the entity settings form.
 */
function _autoshortqr_build_form(ThirdPartySettingsInterface $type, array &$form, FormStateInterface $form_state) {

  $form['autoshortqr'] = [
    '#type' => 'details',
    '#title' => t('Autocode'),
    '#weight' => 35,
    '#group' => 'additional_settings',
  ];

  $form['autoshortqr']['qr_code'] = [
    '#type' => 'details',
    '#title' => t('QR code'),
    '#weight' => 0,
    '#open' => TRUE,
  ];
  $form['autoshortqr']['qr_code']['autoshortqr_qr_enable'] = [
    '#type' => 'checkbox',
    '#title' => t('Enable autocode on this type'),
    '#default_value' => $type->getThirdPartySetting('autoshortqr', 'qr_enable', FALSE),

  ];
  $form['autoshortqr']['qr_code']['autoshortqr_qr_base_domain'] = [
    '#type' => 'url',
    '#title' => t('Base domain'),
    '#description' => t('Set the domain to use for link generation. Defaults to active url on qr code view.'),
    '#url' => $type->getThirdPartySetting('autoshortqr', 'qr_base_domain', ''),
    '#states' => [
      'visible' => [
        ':input[name="autoshortqr_qr_enable"]' => ['checked' => TRUE],
      ],
    ],
  ];

  $form['autoshortqr']['qr_code']['autoshortqr_qr_show'] = [
    '#type' => 'checkbox',
    '#title' => t('Show the qr code on edit form'),
    '#description' => t('Show the qr code on edit form'),
    '#default_value' => $type->getThirdPartySetting('autoshortqr', 'qr_show', TRUE),
    '#states' => [
      'visible' => [
        ':input[name="autoshortqr_qr_enable"]' => ['checked' => TRUE],
      ],
    ],
  ];
  $form['autoshortqr']['qr_code']['autoshortqr_qr_show_url'] = [
    '#type' => 'checkbox',
    '#title' => t('Show url on edit form'),
    '#description' => t('Show url on edit form'),
    '#default_value' => $type->getThirdPartySetting('autoshortqr', 'qr_show_url', FALSE),
    '#states' => [
      'visible' => [
        ':input[name="autoshortqr_qr_enable"]' => ['checked' => TRUE],
      ],
    ],
  ];

  $form['autoshortqr']['qr_code'] += _autoshortqr_get_utm_fields('qr', $type);

  $form['autoshortqr']['short_link'] = [
    '#type' => 'details',
    '#title' => t('Short url'),
    '#weight' => 0,
    '#open' => TRUE,
  ];
  $form['autoshortqr']['short_link']['autoshortqr_short_enable'] = [
    '#type' => 'checkbox',
    '#title' => t('Enable short url on this type'),
    '#default_value' => $type->getThirdPartySetting('autoshortqr', 'short_enable', FALSE),
  ];
  $form['autoshortqr']['short_link']['autoshortqr_short_base_domain'] = [
    '#type' => 'url',
    '#title' => t('Set base domain'),
    '#description' => t('Set the domain to use for link generation. Defaults to active url on short link view.'),
    '#url' => $type->getThirdPartySetting('autoshortqr', 'short_base_domain', ''),
    '#states' => [
      'visible' => [
        ':input[name="autoshortqr_short_enable"]' => ['checked' => TRUE],
      ],
    ],
  ];

  $form['autoshortqr']['short_link']['autoshortqr_short_show_url'] = [
    '#type' => 'checkbox',
    '#title' => t('Show url on edit form'),
    '#description' => t('Show url on edit form'),
    '#default_value' => $type->getThirdPartySetting('autoshortqr', 'short_show_url', TRUE),
    '#states' => [
      'visible' => [
        ':input[name="autoshortqr_short_enable"]' => ['checked' => TRUE],
      ],
    ],
  ];

  $form['autoshortqr']['short_link'] += _autoshortqr_get_utm_fields('short', $type);

  if (
    method_exists($type, 'getEntityTypeId') &&
      (
        $type->getEntityTypeId() == 'user'
        ||
        $type->getEntityTypeId() == 'redirect'
      )
    ) {
    foreach (array_keys($form['actions']) as $action) {
      if ($action != 'preview' && isset($form['actions'][$action]['#type']) && $form['actions'][$action]['#type'] === 'submit') {
        $form['actions'][$action]['#submit'][] = '_autoshortqr_form_submit_' . $type->getEntityTypeId();
      }
    }
  }
  else {
    $form['#entity_builders'][] = '_autoshortqr_form_type_form_builder';
  }

}

/**
 * Helper to include the utm fields for the form.
 */
function _autoshortqr_get_utm_fields($target, ThirdPartySettingsInterface $type) {
  $fields = [];

  $fields['utm_params'] = [
    '#type' => 'details',
    '#title' => t('UTM parameters'),
    '#open' => TRUE,
    '#states' => [
      'visible' => [
        ':input[name="autoshortqr_' . $target . '_enable"]' => ['checked' => TRUE],
      ],
    ],
  ];

  foreach (CodeController::UTM_VARS as $utmVar) {
    $fields['utm_params']['autoshortqr_' . $target . '_' . $utmVar] = [
      '#type' => 'textfield',
      '#title' => $utmVar,
      '#default_value' => $type->getThirdPartySetting('autoshortqr', $target . '_' . $utmVar, ''),
    ];
  }
  if (method_exists($type, 'getEntityTypeId')) {
    $fields['utm_params']['token_tree'] = [
      '#theme' => 'token_tree_link',
      '#token_types' => [str_replace('_type', '', $type->getEntityTypeId())],
      '#show_restricted' => TRUE,
    ];
  }
  return $fields;
}

