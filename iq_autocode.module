}

/**
 * Submit function for node and term type form.
 */
function _autoshortqr_form_type_form_builder($entity_type, ThirdPartySettingsInterface $type, &$form, FormStateInterface $form_state) {
  // QR code.
  $type->setThirdPartySetting('autoshortqr', 'qr_enable', $form_state->getValue('autoshortqr_qr_enable'));
  $baseDomain = $form_state->getValue('autoshortqr_qr_base_domain');
  if (empty($baseDomain)) {
    $type->unsetThirdPartySetting('autoshortqr', 'qr_base_domain');
  }
  else {
    $type->setThirdPartySetting('autoshortqr', 'qr_base_domain', $baseDomain);
  }
  $type->setThirdPartySetting('autoshortqr', 'qr_show', $form_state->getValue('autoshortqr_qr_show'));
  $type->setThirdPartySetting('autoshortqr', 'qr_show_url', $form_state->getValue('autoshortqr_qr_show_url'));
  _autoshortqr_save_utm_parameters('qr', $type, $form_state);

  // Short url.
  $type->setThirdPartySetting('autoshortqr', 'short_enable', $form_state->getValue('autoshortqr_short_enable'));
  $baseDomain = $form_state->getValue('autoshortqr_short_base_domain');
  if (empty($baseDomain)) {
    $type->unsetThirdPartySetting('autoshortqr', 'short_base_domain');
  }
  else {
    $type->setThirdPartySetting('autoshortqr', 'short_base_domain', $baseDomain);
  }
  $type->setThirdPartySetting('autoshortqr', 'short_show_url', $form_state->getValue('autoshortqr_short_show_url'));
  _autoshortqr_save_utm_parameters('short', $type, $form_state);
}

/**
 * Helper to save utm parameters.
 */
function _autoshortqr_save_utm_parameters($target, ThirdPartySettingsInterface $type, FormStateInterface $form_state) {
  foreach (CodeController::UTM_VARS as $utmVar) {
    $value = $form_state->getValue('autoshortqr_' . $target . '_' . $utmVar);
    $type->setThirdPartySetting('autoshortqr', $target . '_' . $utmVar, $value);
  }
}

/**
 * Helper to add autocode output to entity edit forms.
 */
function _autoshortqr_add_autocode_output(&$form, $entity, $settings) {
  if ($entity->isNew()) {
    return;
  }
  if (!empty($settings['qr_enable'])) {
    $prefix = 'nc';

    if ($entity->getEntityTypeId() == 'taxonomy_term') {
      $prefix = 'tc';
    }

    if ($entity->getEntityTypeId() == 'user') {
      $prefix = 'uc';
    }

    if ($entity->getEntityTypeId() == 'redirect') {
      $prefix = 'rc';
    }

    $form['meta']['autoshortqr_qr_container'] = [
      '#type' => 'fieldset',
      '#title' => t('QR Code'),
      '#weight' => 100,
    ];
    if ($settings['qr_show']) {
      $form['meta']['autoshortqr_qr_container']['autoshortqr'] = $entity->autoshortqr->view([
        'type' => 'autoshortqr',
        'label' => '',
        'settings' => [
          'height' => 200,
          'width' => 200,
        ],
      ]);
      $form['meta']['autoshortqr_qr_container']['autoshortqr']['#label_display'] = 'hidden';
      $form['meta']['autoshortqr_qr_container']['autoshortqr']['#prefix'] = '<a href="/autoshortqr/' . $prefix . '/' . base_convert($entity->id(), 10, 36) . '" target="_blank">';
      $form['meta']['autoshortqr_qr_container']['autoshortqr']['#suffix'] = '</a>';
    }
    if ($settings['qr_show_url']) {
      $url = Url::fromUri($entity->autoshortqr->uri);
      $form['meta']['autoshortqr_qr_container']['autoshortqr_url'] = [
        '#type' => 'link',
        '#url' => $url,
        '#title' => $url->toString(),
        '#attributes' => ['target' => '_blank'],
      ];
    }
  }
  if (!empty($settings['short_enable'])) {
    if ($settings['short_show_url']) {
      $url = Url::fromUri($entity->autoshortqr_short_link->uri);
      $form['meta']['autoshortqr_short_link_container'] = [
        '#type' => 'fieldset',
        '#title' => t('Short URL'),
        '#weight' => 201,
      ];
      $form['meta']['autoshortqr_short_link_container']['autoshortqr_short_link'] = [
        '#type' => 'link',
        '#url' => $url,
        '#title' => $url->toString(),
        '#attributes' => ['target' => '_blank'],
      ];
    }
  }
}
