/**
 * Implements hook_entity_base_field_info().
 */
function autoshortqr_entity_bundle_field_info(EntityTypeInterface $entity_type, $bundle, array $base_field_definitions) {
  if ($entity_type->id() == 'node') {
    $type = NodeType::load($bundle);
  }
  if ($entity_type->id() == 'taxonomy_term') {
    $type = Vocabulary::load($bundle);
  }
  if ($entity_type->id() == 'user') {
    $type = new UserThirdpartyWrapper();
  }
  if ($entity_type->id() == 'redirect') {
    $type = new RedirectThirdpartyWrapper();
  }
  if (!empty($type)) {
    if ($type->getThirdPartySetting('autoshortqr', 'qr_enable')) {

      // Add the autocode field.
      $fields['autoshortqr'] = BaseFieldDefinition::create('autoshortqr')
        ->setName('autoshortqr')
        ->setLabel(t('Autocode field'))
        ->setComputed(TRUE)
        ->setClass('\Drupal\autoshortqr\AutoCodeLinkList')
        ->setCardinality(1)
        ->setDisplayConfigurable('view', TRUE)
        ->setDisplayOptions('view', [
          'label' => 'hidden',
          'weight' => -5,
          'region' => 'hidden',
        ]);
    }
    if ($type->getThirdPartySetting('autoshortqr', 'short_enable')) {
      // Add the autocode field.
      $fields['autoshortqr_short_link'] = BaseFieldDefinition::create('autoshortqr_shortlink')
        ->setName('autoshortqr_short_link')
        ->setLabel(t('Short link'))
        ->setComputed(TRUE)
        ->setClass('\Drupal\autoshortqr\AutoCodeLinkList')
        ->setCardinality(1)
        ->setDisplayConfigurable('view', TRUE)
        ->setDisplayOptions('view', [
          'label' => 'hidden',
          'weight' => -5,
          'region' => 'hidden',
        ]);
      return $fields;
    }
  }
}

